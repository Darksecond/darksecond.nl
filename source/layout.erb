<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge; chrome=1' />
    <title><%= current_article.nil? ? current_page.data.title : current_article.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <script src="/js/main.js" async></script>
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
     (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
     m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
     })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-47068165-1', 'darksecond.nl');
    ga('send', 'pageview');

    </script>
  </head>
  <body>
    <nav class="nav">
    	<div class="nav-me">
        <%= link_to 'Tim Peters', '/' %>
    	</div>
    	<ul class="nav-links">
    		<li><%= link_to 'posts', '/' %></li>
    		<li><%= link_to 'about', '/about.html' %></li>
    	</ul>
    </nav>

    <div class="site">
    <% if current_page.data.banner %>
      <div class="banner" style="background-image: url(<%= current_page.data.banner %>);"></div>
    <% end %>

    <section class="container">
      <%= yield %>

      <footer class="footer">
  			<a href="https://github.com/darksecond">
  				<i class="fa fa-github-square fa-2x"></i>
  				<div>See my projects on Github</div>
  			</a>
  			<a href="https://twitter.com/darksecond">
  				<i class="fa fa-twitter-square fa-2x"></i>
  				<div>Follow me on Twitter</div>
  			</a>
  			<a href="http://linkedin.com/in/darksecond/">
  				<i class="fa fa-linkedin-square fa-2x"></i>
  				<div>View my work on Linkedin</div>
  			</a>
  			<a href="mailto:mail@darksecond.nl">
  				<span class="fa-stack">
  					<i class="fa fa-square fa-stack-2x"></i>
  					<i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
  				</span>
  				<div>Send me an Email</div>
  			</a>
  		</footer>
    </section>
    </div>
  </body>
</html>
